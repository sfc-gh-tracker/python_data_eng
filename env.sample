# Snowflake Connection Configuration
# ===================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# Required: Your Snowflake account identifier
# Format: <account_locator> or <orgname>-<account_name>
SNOWFLAKE_ACCOUNT=your_account_identifier

# Required: Authentication
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password

# Optional: Use SSO/browser authentication instead of password
# SNOWFLAKE_AUTHENTICATOR=externalbrowser

# Optional: Use key-pair authentication
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/private_key.pem

# Default context (will be created by setup script)
SNOWFLAKE_WAREHOUSE=WH_DATA_ENG
SNOWFLAKE_DATABASE=DATA_ENGINEERING_DEMO
SNOWFLAKE_SCHEMA=BRONZE
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Pipeline Configuration
SENSOR_BATCH_SIZE=1000
TRANSACTION_BATCH_SIZE=500
EVENT_BATCH_SIZE=2000
TARGET_LAG_MINUTES=1

